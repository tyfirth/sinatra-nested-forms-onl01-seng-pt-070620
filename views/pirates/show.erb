<h1>Display your Pirate here</h1>

<div class="pirate">
  <h3> Your Pirate's Name: <%= @pirate.name %> </h3>
  <h3> Your Pirate's Weight: <%= @pirate.weight %> TONS! </h3>
  <h3> Your Pirate's Height: <%= @pirate.height %> Feet!</h3>
</div><br>

<h2>Display your first ship here</h2>
<h2> Ship 1 </h2>
  <% @ships.each.with_index do |ship, index| %>
<div class="ship">
    <% if index == 0 %>
  <p> Ship 1 Name: <%= ship.name %> </p>
  <p> Ship 1 Type: <%= ship.type %> </p>
  <p> Ship 1 Booty: <%= ship.booty %> </p>
    <% end %>
  <% end %>
</div><br>

<h2>Display your second ship here</h2>
<h2> Ship 2 </h2>
  <% @ships.each.with_index do |ship, index| %>
<div class="ship">
    <% if index == 1 %>
  <p> Ship 2 Name: <%= ship.name %> </p>
  <p> Ship 2 Type: <%= ship.type %> </p>
  <p> Ship 2 Booty: <%= ship.booty %> </p>
    <% end %>
  <% end %>
</div><br>
